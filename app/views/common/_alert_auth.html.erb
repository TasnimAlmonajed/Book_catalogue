<section class="cst-section ">
  <div class="row">
    <div class="col-xs-12 alert-container">
      <div class="box-body">

        <div id="alert-message" class="alert alert-success alert-dismissible alert-section" style="display:none;">
          <button type="button" id="button-alert" class="close" aria-hidden="true">&times;</button>
          <h4 class="cst-alert-text"><i class="icon fa fa-check"></i> <%= flash[:notice] %>
          </h4>
        </div>

        <% flash[:notice] = nil %>
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function(){
    $('#alert-message').slideToggle('slow');
  });
</script>
   