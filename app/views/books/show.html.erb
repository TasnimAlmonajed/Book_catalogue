<%= content_for :page_title, @book.title %>

<section class="content cst-section">
  <div class="row">
    <div class="col-md-8">
      <div class="box form-margins">
        <div class="box-header with-border form-group-margin">
          <h3 class="box-title">Book Details</h3>
        </div>

        <div class="box-body">
          <table class="table table-bordered">
            <tr>
              <th width="30%;">Title</th>
              <td><%= @book.title %></td>
            </tr>
            <tr>
              <th width="30%;">ISBN</th>
              <td><%= @book.isbn %></td>
            </tr>
            <tr>
              <th width="30%;">Short description</th>
              <td><%= @book.short_description %></td>
            </tr>
            <tr>
              <th width="30%;">Authors</th>
              <td><% @book.authors.each do |x| %>
                  <%= " #{x.name} | " %>
                <%end%>
              </td>
            </tr>
            <% if current_user %>
              <tr>
                <th width="30%;">Edit</th>
                <td><%= link_to edit_book_path(@book.id) do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                    <% end %>
                </td>
              </tr>
          <% end %>
          <% if current_user %>
            <tr>
              <th width="30%;">Remove</th>
              <td>
                <%= link_to @book, method: :delete, data: { confirm: "Are you sure you want to delete '#{@book.title}' book?" } do %>
                  <span class="glyphicon glyphicon-remove"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
         </table>
        </div>
      </div>
    </div>
  </div>
</section>
