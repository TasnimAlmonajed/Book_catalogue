<%= content_for :page_title, "Books" %>

<% if flash[:alert]%>
  <%= render "common/alert" %>
<% end %>
<% if flash[:notice]%>
  <%= render "common/alert_auth" %>
<% end %>

<section class="content-header cst-section">
  <div>
    <h2 class="cst-header1">Books</h2>
  </div>
</section>
<section class="content cst-section">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-body">
          <table class="table table-bordered">
            <tr>
              <th>Title</th>
              <% if current_user %>
                <th class="th-width">Edit</th>
                <th class="th-width">Delete</th>
              <% end %>
            </tr>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to book, class: "link-color" do %>
                      <%= book.title %>
                    <% end %>
                  </td>
                <% if current_user %>
                  <td><%= link_to edit_book_path(book) do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                    <% end %>
                  </td>
                  <td><%= link_to book, method: :delete, data: { confirm: "Are you sure you want to delete '#{book.title}' book?" } do %>
                    <span class="glyphicon glyphicon-remove"></span>
                    <% end %>
                  </td>
                  <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>