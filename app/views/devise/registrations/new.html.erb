<%= content_for :page_title, "Registration" %>
<div class="col-md-6">
  <div class="box box-default form-margins">
    <div class="box-header with-border form-group-margin">
      <h3 class="box-title">Registration</h3>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

     <div class="box-body">
      <div class="form-group form-group-margin">
        <label>Email</label>
        <%= f.text_field :email, class:"form-control", autofocus: true %>
      </div>

      <div class="form-group form-group-margin">
        <label>Passowrd</label><i>(minimum 6 characters)</i>
          <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
      </div>

      <div class="form-group form-group-margin">
        <label>Confirm Passowrd</label>
        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off" %>
        </div>
      </div>

      <div class="box-footer form-group-margin">
        <%= f.submit "Register", class:"btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
